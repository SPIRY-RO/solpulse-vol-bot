generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Booster {
  internalID            String @id @default(auto()) @map("_id") @db.ObjectId
  ownerTgID             String @default("")
  tokenAddress          String
  type                  String
  freshWalletPK         String @default("")
  activeWalletPK        String
  activeWalletAddr      String
  lastActiveWalletPK    String @default("")
  isActive              Boolean @default(true)
  cachedTotalTxs        Int     @default(0)
  cachedTotalHolders    Int     @default(0)
  cachedBuyVolume       Float   @default(0.0)
  cachedSellVolume      Float   @default(0.0)
  cachedGasSpent        Float   @default(0.0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model User {
  internalID            String @id @default(auto()) @map("_id") @db.ObjectId // original definition
  tgID                  String @unique
  isBotAdmin            Boolean @default(false)
  workWalletPK          String
  withdrawWalletAddr    String @default("")
  rentExpiresAt         Int @default(0)
  referredByTgID        String @default("")
  unclaimedRefRewards   Float    @default(0.0)
  lastPuppetPKs         String[] @default([])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Settings {
  internalID            String @id @default(auto()) @map("_id") @db.ObjectId // original definition
  ownerTgID             String @unique
  selectedTokenAddr     String @default("")
  volumeSpeed           Int @default(1)
  volumeDuration        Int @default(3600)
  volumeParallelWallets Int @default(4)
  holdersNewHolders     Int @default(500)
  rankParallelWallets   Int @default(22)
}
